/* sort the array */
bubbleSort(integer arr[], integer size) : void       // 2.1, 2.2
  local
    integer n;                                       // 1.1
    integer i;                                       // 1.1
    integer j;                                       // 1.1
    integer temp;                                    // 1.1
  do                                                 
    n = size;                                        // 3.1
    i = 0;                                           // 3.1  
    j = 0;                                           // 3.1
    temp = 0;                                        // 3.1
    while (i < n-1)                                  // 3.3, 5.1
      do
        while (j < n-i-1)                            // 3.3
          do 
            if (arr[j] > arr[j+1])                   // 3.2, 4.1, 5.1, 5.2
              then
                do
                  // swap temp and arr[i]
                  temp = arr[j];                     // 3.1, 4.1, 5.2
                  arr[j] = arr[j+1];                 // 3.1, 4.1, 5.2
                  arr[j+1] = temp;                   // 3.1, 4.1, 5.2
                end
              else
	    ;
            j = j+1;                                 // 3.1, 5.1
          end;
        i = i+1;                                     // 3.1, 5.1
      end;
  end;
   
/* Print the array */
printArray(integer arr[], integer size) : void       // 2.1, 2.2
  local
    integer n;                                       // 1.1
    integer i;                                       // 1.1
  do
    n = size;                                        // 3.1
    i = 0;                                           // 3.1
    while (i<n)                                      // 3.3, 5.1
      do
        write(arr[i]);                               // 3.4, 4.1, 5.2
        i = i+1;                                     // 3.1, 5.1
      end;
  end;

